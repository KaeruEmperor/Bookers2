<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class = "container d-flex justify-content-center">
  <div class = "d-block">
  <h1>User info</h1>
    <%= form_with model: @user do |f| %>
      <div class = "d-block">
        <label for="inputName" class = "d-block">Name</label>
        <%= f.text_field :name %>
      </div>
      <div class = "d-block">
        <label for="inputImage" class = "d-block">Image</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class = "d-block">
      <label for = "inputintroduction" class = "d-block">Introduction</label>
      <%= f.text_area :introduction %>
      <%= f.submit "Update User", class: "btn btn-secondary d-block" %>
      </div>
    <% end %>
  </div>

</div>